{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <section class="vh-100" style="background-color: #676767;">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">

                    <h1 style="color: #ffe5b5" class="text mb-3">Registro</h1>

                    <div class="card shadow-2-strong" style="border-radius: 15px;">
                        <div class="card-body">

                            {{ form_start(registrationForm) }}

                            <!--<div class="col-md-3 ps-5">
                                <h6 class="mb-0">NOMBRE</h6>
                            </div>-->
                            <div class="col-md-9 mb-4">
                                {{ form_row(registrationForm.nombre, {
                                                'label': false,
                                                'attr' : {
                                                    'placeholder' : 'nombre',
                                                    'class' : 'form-control form-control-lg',
                                                    'required' : true                    
                                                }
                                        }) }}
                            </div>
                        
                            <div class="col-md-9 mb-4">
                                <!--<input type="text" class="form-control form-control-lg" />-->
                                {{ form_row(registrationForm.apellido, {
                                            'label': false,
                                            'attr' : {
                                                'placeholder' : 'apellido',
                                                'class' : 'form-control form-control-lg',
                                                'required' : true                    
                                            }
                                        }) }}
                            </div>
                            
                            <div class="col-md-9 mb-4">
                                {{ form_row(registrationForm.correo,{
                                            'label' : false,
                                            'attr' : {
                                                'placeholder' : 'correo electrónico',
                                                'class' : 'form-control form-control-lg',
                                                'required' : true                    
                                            }
                                        }) }}
                            </div>
                    
                            <div class="col-md-9 mb-4">
                                {{ form_row(registrationForm.plainPassword,{
                                            'label' : false,
                                            'attr' : {
                                                'autocomplete' : 'new-password',
                                                'placeholder' : 'contraseña',
                                                'class' : 'form-control form-control-lg',
                                                'required' : true                    
                                            }
                                        }) }}
                            </div>
                        
                            <hr class="mx-n3" style="border-top: 10px; border-bottom:10px;">
                     
                            <div class="col-md-9 mb-4 d-flex justify-content-start">
                                {{ form_row(registrationForm.agreeTerms,{
                                    'label' : 'Aceptar terminos y condiciones',
                                    'attr' : {
                                        'required' : true
                                    }
                                }) }}
                            </div>
                        
                            <div class="px-5 py-4">
                                {{ form_row(registrationForm.submit) }}
                                <!--<button type="submit" class="btn btn-primary btn-lg">Register</button>-->
                            </div>

                            {{ form_end(registrationForm) }}
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
{% endblock %}
